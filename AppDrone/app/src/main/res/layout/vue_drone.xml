<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vue_drone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Partie gauche contenant les boutons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="241dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:text="Commandes"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">
                <!-- Bouton 1 -->

                <Button
                    android:id="@+id/takeOff"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="#498E00"
                    android:text="TakeOff" />

                <!-- Bouton 2 -->
                <Button
                    android:id="@+id/land"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="#FF0000"
                    android:text="Land"
                    android:translationX="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:orientation="horizontal">
                <!-- Bouton 3 -->
                <Button
                    android:id="@+id/GPS"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="#FB8C00"
                    android:text="GPS" />

                <!-- Bouton 4 -->
                <Button
                    android:id="@+id/Camera"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:backgroundTint="#8E24AA"
                    android:text="Camera"
                    android:translationX="5dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Données"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/données"
                android:layout_width="170dp"
                android:layout_height="209dp"
                android:background="#000000"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:translationX="7dp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Camera"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <VideoView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="222dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Console"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Console"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_weight="1"
        android:background="#000000"
        android:textColor="#FFFFFF" />


</LinearLayout>